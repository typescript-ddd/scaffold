{
    "compilerOptions": {
      "outDir": "dist",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "allowJs": false,
      "esModuleInterop": true,
      "declaration": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": "./",
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "rollup.config.js"]
  }